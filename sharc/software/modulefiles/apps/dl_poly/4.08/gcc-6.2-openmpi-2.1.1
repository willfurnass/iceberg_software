proc ModulesHelp { } {
        global version

        puts stderr "   Makes DL_POLY Version 4.08 available for use"
}

#set USER $::env(USER)

module-whatis   "Makes DL_POLY Version 4.08 available"

# load modules
 module load mpi/openmpi/2.1.1/gcc-6.2
 module load apps/plumed/2.3.2/gcc-6.2-openmpi-2.1.1

# module variables
#
 set     version 4.08
 set     dl_polyroot /usr/local/packages/apps/dl_poly/$version/gcc-6.2-openmpi-2.1.1

 prepend-path PATH $dl_polyroot/execute
